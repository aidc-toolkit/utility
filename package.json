{
  "name": "@aidc-toolkit/utility",
  "version": "0.9.13-beta",
  "description": "Foundational utilities for AIDC Toolkit",
  "type": "module",
  "main": "dist/index.js",
  "homepage": "https://github.com/aidc-toolkit",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aidc-toolkit/utility.git"
  },
  "bugs": {
    "url": "https://github.com/aidc-toolkit/utility/issues"
  },
  "license": "Apache-2.0",
  "author": {
    "name": "Kevin Dean",
    "email": "Kevin.Dean@datadevelopment.com",
    "url": "https://www.linkedin.com/in/kdean"
  },
  "scripts": {
    "lint": "eslint .",
    "build:core": "tsup src/index.ts --format cjs,esm --dts --clean",
    "build:dev": "npm run build:core && tsc src/index.ts --outDir dist --target esnext --moduleResolution nodenext --module nodenext --emitDeclarationOnly --declaration --declarationMap",
    "build:release": "npm run build:core -- --minify",
    "publish-dev": "publish-dev",
    "test": "vitest run"
  },
  "devDependencies": {
    "@aidc-toolkit/dev": "alpha",
    "vitest": "^3.0.5"
  },
  "dependencies": {
    "@aidc-toolkit/core": "alpha",
    "i18next": "^24.2.2"
  }
}
